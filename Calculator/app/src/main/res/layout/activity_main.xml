<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calc_operations"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="70sp"
        android:maxLines="1"
        android:minLines="1"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/operation_all_clear"
                style="@style/OperationButton"
                android:text="C"/>

            <TextView
                android:id="@+id/operation_sign_number"
                style="@style/OperationButton"
                android:text="+/-"/>

            <TextView
                android:id="@+id/operation_procent"
                style="@style/OperationButton"
                android:text="%"/>

            <TextView
                android:id="@+id/operation_division"
                style="@style/OperationButton"
                android:text="รท"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_7"
                style="@style/NumberButton"
                android:text="7"/>

            <TextView
                android:id="@+id/btn_8"
                style="@style/NumberButton"
                android:text="8"/>

            <TextView
                android:id="@+id/btn_9"
                style="@style/NumberButton"
                android:text="9"/>

            <TextView
                android:id="@+id/operation_multiply"
                style="@style/OperationButton"
                android:text="x"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_4"
                style="@style/NumberButton"
                android:text="4"/>

            <TextView
                android:id="@+id/btn_5"
                style="@style/NumberButton"
                android:text="5"/>

            <TextView
                android:id="@+id/btn_6"
                style="@style/NumberButton"
                android:text="6"/>

            <TextView
                android:id="@+id/operation_minus"
                style="@style/OperationButton"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                style="@style/NumberButton"
                android:text="1"/>

            <TextView
                android:id="@+id/btn_2"
                style="@style/NumberButton"
                android:text="2"/>

            <TextView
                android:id="@+id/btn_3"
                style="@style/NumberButton"
                android:text="3"/>

            <TextView
                android:id="@+id/operation_addition"
                style="@style/OperationButton"
                android:text="+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dot_sign"
                style="@style/NumberButton"
                android:text="."/>

            <TextView
                android:id="@+id/btn_0"
                style="@style/NumberButton"
                android:text="0"/>

            <TextView
                android:id="@+id/operation_del"
                style="@style/NumberButton"
                android:text="DEL"/>

            <TextView
                android:id="@+id/operation_equal"
                style="@style/OperationButton"
                android:text="="/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>